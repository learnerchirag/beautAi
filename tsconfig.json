{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "@/lib/*": ["lib/*"],
      "@/components/*": ["components/*"],
      "@/hooks/*": ["hooks/*"],
      "@/constants/*": ["constants/*"],
      "@/assets/*": ["assets/*"],
      "@/types/*": ["types/*"],
      "@/utils/*": ["utils/*"],
      "@/services/*": ["services/*"],
      "@/store/*": ["store/*"],
      "@/navigation/*": ["navigation/*"],
      "@/screens/*": ["screens/*"],
      "@/theme/*": ["theme/*"],
      "@/assets/icons/*": ["assets/icons/*"],
      "@/assets/images/*": ["assets/images/*"],
      "@/assets/fonts/*": ["assets/fonts/*"],
      "@/assets/videos/*": ["assets/videos/*"],
      "@/assets/lottie/*": ["assets/lottie/*"],
      "@/assets/svg/*": ["assets/svg/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}
